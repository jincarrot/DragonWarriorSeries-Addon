{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.kavili_v2.move": {
            "initial_state": "idle",
            "states": {
                "idle": {
                    "animations": [
                        "always"
                    ],
                    "transitions": [
                        {
                            "walking": "q.ground_speed > 1.0"
                        }
                    ],
                    "blend_transition": 0.2
                },
                "walking": {
                    "animations": [
                        "walk"
                    ],
                    "particle_effects": [
                        {
                            "effect": "dragon:firef"
                        }
                    ],
                    "transitions": [
                        {
                            "idle": "q.ground_speed < 0.5"
                        }
                    ],
                    "blend_transition": 0.2
                }
            }
        }
    }
}